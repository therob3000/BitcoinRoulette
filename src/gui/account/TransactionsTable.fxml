<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import fxmltableview.*?> 
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>


<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml" >
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Transactions" GridPane.columnIndex="0" GridPane.rowIndex="0"></Label>
    
     <Button text="Refresh" onAction="#refresh"/>
    
    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="1">
    <columns>
          <TableColumn text="Address">
        <cellValueFactory><PropertyValueFactory property="address" />
        </cellValueFactory>
     </TableColumn>
     <TableColumn text="Amount">
        <cellValueFactory><PropertyValueFactory property="amount" />
        </cellValueFactory>
     </TableColumn>
     <TableColumn text="Status">
         <cellValueFactory><PropertyValueFactory property="status" />
         </cellValueFactory>
    </TableColumn>
     </columns>    
     
    </TableView>
</GridPane>
